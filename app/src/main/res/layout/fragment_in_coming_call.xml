<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#62def8"
    tools:context=".InComingCallFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/InComingCallId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="In Coming Call"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/InComingDeclineButton"
                android:layout_width="102dp"
                android:layout_height="69dp"
                android:layout_gravity="center_horizontal"

                android:layout_weight="1"
                app:srcCompat="@drawable/decline_button" />


            <ImageView
                android:id="@+id/InComingAcceptButton"
                android:layout_width="102dp"
                android:layout_height="69dp"
                android:layout_gravity="center_horizontal"

                android:layout_weight="1"
                app:srcCompat="@drawable/accept_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/InComingDeclineTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Decline"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/InComingAcceptTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Accept"
                android:textSize="25dp" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>