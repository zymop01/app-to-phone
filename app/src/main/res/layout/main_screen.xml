<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/mainScreen"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/TextButtonFrameSection"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/TextBox1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp" />

                <EditText
                    android:id="@+id/TextBox2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp" />

                <EditText
                    android:id="@+id/TextBox3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp" />

                <EditText
                    android:id="@+id/TextBox4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Chat1Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="chat 1" />

                <Button
                    android:id="@+id/Chat2Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="chat 2" />

                <Button
                    android:id="@+id/Chat3Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="chat 3" />

                <Button
                    android:id="@+id/Chat4Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="chat 4" />

            </LinearLayout>

        </LinearLayout>>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/LocalMediaFrameSection"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp">
        <RelativeLayout
            android:id="@+id/LocalContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/RemoteMediaFrameSection"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="350dp">
        <RelativeLayout
            android:id="@+id/RemoteContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/TextChattingFrameSection"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="580dp">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/TextContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/logN"
                    android:layout_width="match_parent"
                    android:layout_height="496dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="90dp"
                    android:layout_marginRight="0dp"
                    android:gravity="top"
                    android:scrollbars="vertical" />

                <EditText
                    android:id="@+id/textN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:hint="Message"></EditText>

                <Button
                    android:id="@+id/sendN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:text="Send" />
            </RelativeLayout>



        </ScrollView>

    </FrameLayout>

</RelativeLayout>